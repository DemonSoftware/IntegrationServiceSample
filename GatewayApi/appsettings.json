{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information"
    }
  },
  "AllowedHosts": "*",
  "ClientApi": {
    "BaseUrl": "https://api.client.com",
    "AuthEndpoint": "/auth/token",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret",
    "Authority": "https://auth.client.com",
    "ValidIssuer": "client-issuer",
    "ValidAudience": "your-api",
    "IgnoreCertificateErrorsInDevelopment": true
  },
  "ClientCertificate": {
    "FilePath": "Certificates/client-cert.pfx",
    "Password": "cert-password"
  },
  "TrustedServerCertificateThumbprint": "server-cert-thumbprint"
}